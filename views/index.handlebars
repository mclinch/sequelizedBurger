
<div class="container center" id="background">
<img src="/assets/img/double_double_meal.png" id="burger-img" height="200">
<h1 id="header">Dream-Burger!</h1>



<div class="container">  
<div class="row">

  <div class="col s6">

    <h3 id=""> Served: </h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
            <form action="/{{id}}?_method=PUT" method="POST">
              <input type="hidden" name = "devour" value="true">
              <button class="eat waves-effect waves-light btn" type="submit">Eat!</button>
            </form>
          </li>
          {{/unless}}
        {{/each}}
    </ul>
  </div>

  

  <div class="col s6">
    <h3 id=""> Devoured burgers: </h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
            <form action="/{{id}}?_method=PUT" method="POST">
              <input type="hidden" name = "devour" value="false">
              <button class="eat waves-effect waves-light btn" type="submit">I'm Full!</button>
            </form>
          </li>
          {{/if}}
        {{/each}}
    </ul>
  </div>
</div>
</div>

<div>
  <h4 id=""> Enter your dream burger and place your order </h4>

  <form class="create-update-form" action="/" method="POST">
    
    <div class="container">
      <label for=""> Type Burger Name Below: </label>
      <input type="text" id="" name ="burger_name">
    </div>

    <button class="eat waves-effect waves-light btn red lighten-4" type="submit">Place Order</button>
  </form>
  </div>


